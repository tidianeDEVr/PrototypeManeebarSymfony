<!DOCTYPE html>
<html lang='fr'>
    <head>
        <!-- Meta -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="Une plateforme qui vous mets en relation avec des techniciens...">
        <meta name="author" content="Maneebar">
        <title>{% block title %}Maneebar{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{asset('assets/images/ico_maneebar.png')}}">
        <!-- Bootstrap CDN-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" crossorigin="anonymous"/>
        <!-- Font Awesome CDN -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <!-- Slick JS CDN -->
        <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" crossorigin="anonymous"/>
        <!-- Custom Style -->
        <link href="{{asset("assets/css/style.css")}}" rel="stylesheet" type="text/css" crossorigin="anonymous"/>
        <link href="{{asset("assets/css/responsive.css")}}" rel="stylesheet" type="text/css" crossorigin="anonymous"/>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
        <header>
            <nav class='navbar navbar-expand-lg bg-light'>
                <div class='container'>
                    <a class="navbar-brand" href="{{path('app_home')}}">
                        <img src="{{asset('assets/images/logo_maneebar.png')}}" height='65'>
                    </a>
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{path('app_home')}}">Acceuil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('nos_services')}}">Nos services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('qui_sommes_nous')}}">Qui sommes-nous</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('nous_contacter')}}">Nous contacter</a>
                        </li>
                        <li class="nav-item">
                            {% if is_granted('ROLE_USER')%}
                            <a class="nav-link" href="{{path('app_logout')}}">
                                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                            </a>
                            {% else %}
                            <a class="nav-link" href="{{path('app_login')}}">
                                <i class="fa-solid fa-arrow-right-to-bracket"></i>
                            </a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
        <footer class='d-flex flex-column align-items-center py-5'>
            <div class='footer-middle p-5'>
                <div class='logos-container d-flex jutisfy-content-center'>
                    <div class='logos mx-auto'>
                        <i class="fa-brands fa-instagram-square fa-2x"></i>
                        <i class="fa-brands fa-facebook-square fa-2x"></i>
                        <i class="fa-brands fa-linkedin fa-2x"></i>
                        <i class="fa-brands fa-youtube-square fa-2x"></i>
                    </div>
                </div>
                <div class='img-footer d-flex justify-content-center mt-1'>
                    <img src="{{asset('assets/images/logo_maneebar.png')}}" alt='Maneebar Logo' >
                </div>
                <div class='text-center mt-1 copyright'>Copyright 2022 | Maneebar</div>
                <div class='d-flex justify-content-center mentions'>
                    <div class='d-flex my-1'>
                        <a href='#'> Mentions legales </a>
                        <span class='mx-1'> | </span>
                        <a href='#'> Politique de confidentialite </a>
                    </div>
                </div>
            </div>
        </footer>
        {% endblock %}

        {% block javascripts %}
            <!-- Bootstrap js -->
            <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
            <!-- JQuery -->
            <script defer src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
            <!-- Slick js-->
            <script defer type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
            <!-- Custom js -->
            <script defer src="{{asset("assets/js/script.js")}}"></script>
        {% endblock %}
    </body>
</html>
